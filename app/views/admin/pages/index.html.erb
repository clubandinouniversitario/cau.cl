<div class="row">
  <div class="col-xs-9">
    <h3 class="text-uppercase"><%= I18n.t('members.sidebar.pages') %></h3>
  </div>
  <div class="col-xs-3">
    <%= link_to I18n.t('members.admin.page.new'), new_admin_page_path, class: 'btn btn-primary btn-block m-t-20' %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped nn-default-datatable m-b-20">
    <thead>
      <tr>
        <th><%= I18n.t('members.admin.page.title') %></th>
        <th><%= I18n.t('members.admin.page.url') %></th>
        <th><%= I18n.t('members.admin.page.active') %></th>
        <th style="width:140px;min-width:140px;max-width:140px;" data-orderable="false"></th>
      </tr>
    </thead>
    <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td><%= page.title %></td>
          <td><%= page.url %></td>
          <td><%= page.active ? I18n.t(:indeed) : I18n.t(:no) %></td>
          <td>
            <%= link_to I18n.t('buttons.show'), page_path(page.url),  class: "btn btn-success btn-xs" %>
            <%= link_to I18n.t('buttons.edit'), edit_admin_page_path(page),  class: "btn btn-warning btn-xs" %>
            <%= link_to I18n.t('buttons.destroy'), admin_page_path(page), class: "btn btn-danger btn-xs", method: :delete, data: { confirm: I18n.t('admin.page.confirm_removal') } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
